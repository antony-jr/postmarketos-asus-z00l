# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-asus-z00l
pkgdesc="Asus Zenfone 2 Laser (720p)"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base mkbootimg linux-postmarketos-qcom-msm8916 soc-qcom-msm8916"
makedepends="devicepkg-dev"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
source="deviceinfo"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

# I'm trying to copy Asus z00t's Firmware since they are very
# similar and should be compatible.
nonfree_firmware() {
        pkgdesc="All non-free firmwares from a device image. Includes firmware for wifi, modem and camera among others."
        depends="firmware-asus-z00l"
        mkdir "$subpkgdir"
}


